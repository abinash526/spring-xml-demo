<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">
    <bean id="Salman" class="com.stackroute.domain.Actor">
        <property name="name" value="Salman"></property>
        <property name="gender" value="male"></property>
        <property name="age" value="52"></property>
    </bean>
    <bean id="wanted" class="com.stackroute.domain.Movie" scope="prototype">
        <constructor-arg name="actor" ref="Salman"></constructor-arg>
    </bean>
    <bean id="Shahidkapoor" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="Shahid"></constructor-arg>
        <constructor-arg name="gender" value="male"></constructor-arg>
        <constructor-arg name="age" value="35"></constructor-arg>
    </bean>
    <bean name="KabirSingh,UdtaPunjab" class="com.stackroute.domain.Movie" scope="prototype">
        <constructor-arg name="actor" ref="Shahidkapoor"></constructor-arg>
    </bean>






</beans>